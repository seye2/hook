{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",                       /* List of root folders whose combined content represents the structure of the project at runtime. */
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
  },
  "exclude": ["node_modules", "**/*.spec.tsx?", "**/*.test.tsx?"],
  "include": ["src", "model", "./@types/*.d.ts"]
}
